    tools:context=".User_registration">

   <!-- <include layout="@layout/toolbar_login2" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28.61dp"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/logo1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Royalrex"
                    android:textColor="#34353d"
                    android:textSize="30.3dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="Registration"
                android:textColor="#5f6271"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I am"
                android:layout_marginTop="20dp"
                android:textColor="#454545"
                android:textSize="18.7dp" />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <RadioButton
                    android:id="@+id/Sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/temp_button"
                    android:drawablePadding="50dp"
                    android:paddingLeft="7dp"
                    android:checked="true"
                    android:layout_marginRight="26.3dp"
                    android:text="Sender"
                    android:textSize="15sp"/>


                <RadioButton
                    android:id="@+id/Driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/temp_button"
                    android:drawablePadding="50dp"
                    android:paddingLeft="7dp"
                    android:checked="true"
                    android:layout_marginRight="26.3dp"
                    android:textSize="15sp"
                    android:text="Driver" />



                <RadioButton
                    android:id="@+id/Both"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/temp_button"
                    android:drawablePadding="50dp"
                    android:paddingLeft="7dp"
                    android:checked="true"
                    android:textSize="15sp"
                    android:text="Both" />


                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

                <!--<ImageView-->
                <!--android:id="@+id/image1"-->
