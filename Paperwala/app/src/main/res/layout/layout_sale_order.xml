<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#b8c0ea"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_baseline_insert_drive_file_24" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sale_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


            <View
                android:id="@+id/view"
                android:layout_margin="7dp"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/image" />


            <TextView
                android:id="@+id/paid_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/final_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_toRightOf="@+id/paid_amount"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/paid_amount"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:text="Paid amount"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/famount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/final_amount"
                android:layout_toRightOf="@+id/amt"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:text="FINAL BALANCE AMT:"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_margin="6dp"
                android:layout_height="2dp"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/famount" />



            <TextView
                android:id="@+id/view_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amt"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:text="View"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/famount"
                android:layout_toRightOf="@+id/view_data"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:text="Delete"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>